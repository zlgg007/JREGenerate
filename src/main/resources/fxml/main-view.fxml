<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zlgg.ui.MainController">
   <center>
      <SplitPane dividerPositions="0.55" orientation="HORIZONTAL">
         <!-- 左侧主界面 -->
         <VBox spacing="15" minWidth="500">
            <padding>
               <Insets bottom="20" left="20" right="10" top="10" />
            </padding>
            
            <!-- JAR文件选择区域 -->
            <VBox spacing="8" styleClass="section">
               <Label styleClass="section-title" text="1. 选择JAR文件" />
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <TextField fx:id="jarPathField" promptText="请选择要分析的JAR文件..." HBox.hgrow="ALWAYS" />
                  <Button fx:id="browseJarButton" text="浏览..." />
               </HBox>
            </VBox>
            
            <!-- JavaFX SDK配置区域 -->
            <VBox spacing="8" styleClass="section">
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <CheckBox fx:id="enableJavafxCheckBox" text="启用JavaFX支持" />
                  <Label styleClass="hint-text" text="(如果JAR使用JavaFX，请勾选此选项并选择JavaFX SDK路径)" />
               </HBox>
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <TextField fx:id="javafxSdkPathField" promptText="JavaFX SDK路径 (可选)..." HBox.hgrow="ALWAYS" />
                  <Button fx:id="browseJavafxButton" text="浏览..." />
               </HBox>
            </VBox>
            
            <!-- 输出目录选择区域 -->
            <VBox spacing="8" styleClass="section">
               <Label styleClass="section-title" text="2. 选择输出目录" />
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <TextField fx:id="outputDirField" promptText="JRE输出目录..." HBox.hgrow="ALWAYS" />
                  <Button fx:id="browseOutputButton" text="浏览..." />
               </HBox>
            </VBox>
            
            <!-- 构建配置区域 -->
            <VBox fx:id="configurationPane" spacing="8" styleClass="section">
               <Label styleClass="section-title" text="3. 构建配置" />
               <GridPane hgap="20" vgap="8">
                  <columnConstraints>
                     <ColumnConstraints />
                     <ColumnConstraints />
                  </columnConstraints>
                  <CheckBox fx:id="compressJreCheckBox" text="启用压缩" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  <CheckBox fx:id="stripDebugCheckBox" text="移除调试信息" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  <CheckBox fx:id="noManPagesCheckBox" text="不包含手册页" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                  <CheckBox fx:id="noHeaderFilesCheckBox" text="不包含头文件" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                     <Label text="压缩级别:" />
                     <ComboBox fx:id="compressionLevelComboBox" prefWidth="80" />
                  </HBox>
               </GridPane>
            </VBox>
            
            <!-- 操作按钮区域 -->
            <HBox alignment="CENTER" spacing="20" styleClass="button-section">
               <Button fx:id="analyzeButton" styleClass="primary-button" text="分析JAR文件" />
               <Button fx:id="buildJreButton" styleClass="primary-button" text="构建自定义JRE" />
            </HBox>
            
            <!-- 进度显示区域 -->
            <VBox spacing="8" styleClass="progress-section">
               <ProgressBar fx:id="progressBar" prefWidth="Infinity" />
               <Label fx:id="statusLabel" styleClass="status-text" text="就绪" />
            </VBox>
            
            <!-- 依赖关系树 -->
            <VBox spacing="8" styleClass="section" VBox.vgrow="ALWAYS">
               <Label styleClass="section-title" text="依赖关系" />
               <TreeView fx:id="dependencyTreeView" prefHeight="200" VBox.vgrow="ALWAYS" />
            </VBox>
         </VBox>
         
         <!-- 右侧日志区域 -->
         <VBox spacing="8" styleClass="section" minWidth="250">
            <padding>
               <Insets bottom="20" left="10" right="20" top="10" />
            </padding>
            <Label styleClass="section-title" text="日志输出" />
            <!-- 日志组件将通过代码动态添加到这里 -->
            <VBox fx:id="logContainer" VBox.vgrow="ALWAYS" />
         </VBox>
      </SplitPane>
   </center>
</BorderPane> 